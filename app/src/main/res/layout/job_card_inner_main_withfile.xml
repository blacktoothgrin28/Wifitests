<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/demo_item_selector"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:minHeight="40dp"
        android:padding="6dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/time"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/time"
                android:layout_toRightOf="@+id/time"
                android:text="Senior Data Scientist"
                android:textColor="@color/carddemo_blackcolored_color"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/cv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/destination"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:text="CV"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/theme_accent_1"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="20dp"
                android:id="@+id/image_upload"
                android:layout_height="20dp"
                android:layout_below="@id/destination"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@id/cv"
                android:layout_toStartOf="@id/cv"
                android:background="@drawable/ic_upload" />

        </RelativeLayout>


        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:text="Your role will be extract value to data through innovative Big Data/Data Science approaches in order to support our business processes and decision making."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="italic" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="2dp"
            android:background="#641a2170"></View>

        <TextView
            android:id="@+id/languages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:text="English, German"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#464646"
            android:textSize="11dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="2dp"
            android:background="#641a2170"></View>

        <TextView
            android:id="@+id/skills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:text="Mathematica, Excel, R"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#464646"
            android:textSize="11dp" />

    </LinearLayout>

</LinearLayout>