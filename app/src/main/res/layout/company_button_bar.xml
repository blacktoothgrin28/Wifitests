<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingEnd="8dp"
    android:paddingStart="8dp">

    <TextView
        android:id="@+id/text1"
        style="@style/card.native.actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="left"
        android:background="?android:selectableItemBackground"
        android:text="MORE" />

    <ImageButton
        android:id="@+id/ic01"
        style="@style/card.native.actions.button"
        android:layout_toLeftOf="@+id/ic0"
        android:background="?android:selectableItemBackground"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_http" />

    <ImageButton
        android:id="@+id/ic0"
        style="@style/card.native.actions.button"
        android:layout_toLeftOf="@+id/ic1"
        android:background="?android:selectableItemBackground"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_add_contact" />

    <ImageButton
        android:id="@+id/ic1"
        style="@style/card.native.actions.button"
        android:layout_toLeftOf="@+id/ic2"
        android:background="?android:selectableItemBackground"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_phone" />
    <!--android:src="@drawable/l_search" />-->


    <ImageButton
        android:id="@+id/ic2"
        style="@style/card.native.actions.button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="?android:selectableItemBackground"
        android:scaleType="fitCenter"
        android:src="@drawable/l_mail" />


</RelativeLayout>