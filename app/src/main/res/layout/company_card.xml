<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Card visible layout -->
    <it.gmariotti.cardslib.library.view.ForegroundLinearLayout
        android:id="@+id/card_main_layout"
        style="@style/card.native.main_layout_foreground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <it.gmariotti.cardslib.library.view.component.CardThumbnailView
            android:id="@+id/card_thumbnail_layout"
            style="@style/card.native.card_thumbnail_outer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card:card_thumbnail_layout_resourceID="@layout/native_thumbnail_largematerial_icon" />


    </it.gmariotti.cardslib.library.view.ForegroundLinearLayout>

    <ViewStub
        android:id="@+id/card_supplemental_actions_vs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inflatedId="@+id/card_supplemental_actions" />

    <!-- Expand layout. You can customize this element with your CardExpand class -->
    <FrameLayout
        android:id="@+id/card_content_expand_layout"
        style="@style/card.main_contentExpand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>

</LinearLayout><!-- From: file:/home/gabriele/Lavoro/Android/AndroidStudioProjects/wrks/cardslib/library-cards/src/main/res/layout/native_material_largeimage_card.xml -->