<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/demo_item_selector"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:padding="3dp">

    <LinearLayout
        android:id="@+id/left"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="Patatas revolconas"
            android:textColor="@color/carddemo_blackcolored_color"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:text="Esquisitas patas hechas al horno con mucho cariño, tal como las preparaba mi abuelita "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="11sp"
            android:textStyle="italic" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="2dp"
            android:background="#641a2170"></View>

        <TextView
            android:id="@+id/ingredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:text="Patatas, sal, ketchup"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#464646"
            android:textSize="11dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/price"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="9.50€"
        android:textColor="@color/demo_card_weather_temperature_color"
        android:textSize="24sp" />

</LinearLayout>