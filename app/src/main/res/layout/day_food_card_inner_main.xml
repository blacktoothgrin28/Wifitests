<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/demo_item_selector"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:padding="3dp">

    <LinearLayout
        android:id="@+id/left"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:gravity="center_horizontal"
            android:text="Primero"
            android:textColor="@color/carddemo_blackcolored_color"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:gravity="center_horizontal"
            android:text="- Patas hechas al horno con mucho cariño, tal como las preparaba mi abuelita "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="11sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/description2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:gravity="center_horizontal"
            android:text="- Patas hechas al horno con mucho cariño, tal como las preparaba mi abuelita "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="11sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/description3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:gravity="center_horizontal"
            android:text="- Patas hechas al horno con mucho cariño, tal como las preparaba mi abuelita "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="11sp"
            android:textStyle="italic" />

    </LinearLayout>


</LinearLayout>