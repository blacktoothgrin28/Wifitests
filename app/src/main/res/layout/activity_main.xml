<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="MergeRootFrame">

    <Button
        android:id="@+id/button_wifi"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:onClick="clickConnect"
        android:text="Conn Wifi"
        android:visibility="visible" />

    <FrameLayout
        android:layout_width="122dp"
        android:layout_height="192dp"
        android:layout_gravity="right|center_vertical">

        <Button
            android:id="@+id/bt_add_weacon"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:gravity="top"
            android:onClick="clickAddWeacon"
            android:text="Add Weacon"
            android:visibility="visible" />

        <Button
            android:id="@+id/startSearching"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:onClick="clickAddWeacon"
            android:text="Trigger W"
            android:visibility="visible" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_demoStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:text="Demo activated:" />

    <Button
        android:id="@+id/bt_lista"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:onClick="clickCards"
        android:text="CARDS" />

    <Switch
        android:id="@+id/sw_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:text="Demo Mode" />

</FrameLayout>

